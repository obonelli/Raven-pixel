{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "src/**/*",
        "vite.config.ts",
        "global.d.ts"
    ]
}