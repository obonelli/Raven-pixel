{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./build",
        "baseUrl": "./",
        "types": [
            "node"
        ]
    },
    "include": [
        "electron/**/*",
        "frontend/**/*.ts",
        "frontend/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}